

// A simple sin wave: 

x = 0:pi/100:2*pi;
y = sin(x);
plot(x,y)

//  Comparison of two sin waves:

x = linspace(-2*pi,2*pi);
y1 = sin(x);
y2 = cos(x);

figure
plot(x,y1,x,y2)

// Very visual comparison of 3 sin waves: 

x = 0:pi/100:2*pi;
y1 = sin(x);
y2 = sin(x-0.25);
y3 = sin(x-0.5);

figure
plot(x,y1,x,y2,'--',x,y3,':')

//   Another very visual comparison of 3 sin waves: 

x = 0:pi/10:2*pi;
y1 = sin(x);
y2 = sin(x-0.25);
y3 = sin(x-0.5);

figure
plot(x,y1,'g',x,y2,'b--o',x,y3,'c*')



